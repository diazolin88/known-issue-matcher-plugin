{
  "manifest_version": 3,
  "name": "Known Issues Matcher",
  "version": "1.0",
  "description": "Matches known error patterns on a test page.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "file:///home/alex/projects/known-issues-matcher-plugin/frontend/test-page.html",
    "https://*.testmo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "file:///home/alex/projects/known-issues-matcher-plugin/frontend/test-page.html",
        "https://*.testmo.com/*"
      ],
      "js": [
        "api-client.js",
        "settings.js",
        "ui-utils.js",
        "settings-ui.js",
        "actions.js",
        "matcher.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}